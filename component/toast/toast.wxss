.toast_content_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  z-index: 999;  
}  
.toast_icon{
  color: #fff;
  margin: 30rpx 0 20rpx;
}
.toast_icon image{
  width: 80%;
  height: auto;
}
.toast_content {  
  min-width: 30%;
  max-width: 50%;
  padding: 30rpx 20rpx;  
  background: rgba(0, 0, 0, .6);  
  border-radius: 8rpx;  
  margin-top:-180rpx;
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  margin-top: 5rpx;
  line-height: 1.5em;
}