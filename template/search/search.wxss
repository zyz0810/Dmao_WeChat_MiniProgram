.search {
  top: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box; 
  z-index: 110;
  padding: 15rpx 0; 
}
.search.borderbottom::after{
  content: "";
  display: block;
  width: 100%;
  position: absolute;
  bottom: -3rpx;
  right: 0;
  height: 1px;
  background: #d9d9d9;
  transform: scaleY(0.5);
  z-index: 2;
}

.searchWrap {
  width: 600rpx;
  background: rgba(0, 0, 0, 0.3);
  margin: 0 auto;
  box-sizing: border-box;
  padding: 10rpx 100rpx;
  border-radius: 40rpx;
  position: relative;
  color: #fff;
}

.searchWrap image {
  display: block;
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top: 10rpx;
}

.searchWrap input {
  height: 40rpx;
  min-height: 40rpx;
}

.searchWrap .searchIcon {
  left: 20rpx;
}

.searchWrap .scanIcon {
  right: 30rpx;
  z-index: 100000;
}