/* pages/login/login.wxss */

page {
  background: #fff;
}

.line {
  width: 590rpx;
  margin: 60rpx auto;
  display: flex;
  justify-content: center;
  border-bottom: 1px solid #ddd;
  padding-bottom: 5rpx;
}

.line input {
  width: 100%;
  flex: 1;
  padding-left: 100rpx;
  margin-top: 9rpx;
}

.line text {
  margin-top: 15rpx;
}

.loginBtn {
  width: 610rpx;
  line-height: 88rpx;
  border-radius: 88rpx;
  color: #fff;
  background: #ff9c00;
}

.loginBtn::after, .loginBtn::before {
  border: 0;
}

.catchtap .line {
  width: 388rpx;
  margin-left: 80rpx;
}

.sendCap {
  margin: 60rpx auto;
  padding: 10rpx;
  color: #ff9c00;
  border: 1px solid #ff9c00;
}
